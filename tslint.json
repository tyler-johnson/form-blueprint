{
  "extends": "tslint:recommended",
  "rules": {
    "trailing-comma": false,
    "max-classes-per-file": false,
    "variable-name": {
      "severity": "warning",
      "options": [ "ban-keywords" ]
    },
    "interface-name": false,
    "quotemark": false,
    "whitespace": false,
    "max-file-line-count": {
      "severity": "warning",
      "options": 500
    },
    "indent": {
      "severity": "error",
      "options": [ "spaces", 2 ]
    },
    "no-console": false,
    "no-empty": false,
    "no-interface-empty": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "curly": false,
    "only-arrow-functions": false,
    "member-ordering": false
  },
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/*.d.ts"
    ]
  }
}
